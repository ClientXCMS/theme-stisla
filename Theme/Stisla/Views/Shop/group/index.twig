{% extends "layout.twig" %}
{% block title trans("our_products") %}
{% block body %}
	<section class="forms">
		<div class="container-fluid">
			<div class="row">
				{% for row in groups | batch(3) %}
					{% for group in row  %}
						<div class="col-sm-12 col-md-12 col-xl-{{ group.col }} mt-4">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">{{ group.name }}</h5>
									<p class="card-text">{{ group.headline }}</p>
									<a class="card-link btn btn-success" href="{{ path('shop.show',{slug: group.slug}) }}">
										<i class="fas fa-arrow-circle-right"></i>
										{{ trans("see_product")}}
									</a>
								</div>
							</div>
						</div>
					{% endfor %}
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
