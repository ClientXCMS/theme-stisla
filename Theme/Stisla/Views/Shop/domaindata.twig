<div class="col-md-12 col-xl-6 col-sm-12">

		{% if errors.domain %}
		<div class="alert alert-info">
			{{ trans(errors.domain)}}
		</div>
		{% endif %}
	<div class="card">
		<div class="card-body">
		
			<div class="row">
				<div class="col-12">
					<h4>{{ trans("domaindata.title")}}</h4>
					<div class="accordion" id="accordionExample">
						<div class="card">
							<div class="card-header card-primary" id="headingUpdate">
								<h2 class="mb-0">

									<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="{{ item.owndomainsld is not empty ? 'true' : 'false'}}" aria-controls="collapseOne">
										{{ trans("domaindata.headingUpdate")}}
									</button>
								</h2>
							</div>
							<div id="collapseOne" class="collapse {{ item.owndomainsld is not empty ? 'show' : ''}}" aria-labelledby="headingOne" data-parent="#accordionExample">
								<div class="card-body">
									<div class="col-sm-12 col-md-12">
										{{ field('owndomainsld', item.owndomainsld,trans("domain") )}}
									</div>
								</div>
							</div>
						</div>
						{% if domains is not empty %}
							<div class="card">
								<div class="card-header" id="headingTwo">
									<h2 class="mb-0">
										<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="{{ item.domainsubdomain is not empty ? 'true' : 'false'}}" aria-controls="collapseTwo">
											{{ trans("domaindata.headingSubdomain", {'%app_name%': config('app.name')})}}
										</button>
									</h2>
								</div>
								<div id="collapseTwo" class="collapse {{ item.domainsubdomain is not empty ? 'show' : ''}}" iaria-labelledby="headingTwo" data-parent="#accordionExample">
									<div class="card-body">
										<div class="col-sm-12 col-md-12">
											<div class="form-row align-item-center">
												<div class="col-6">
													<div class="col-auto">
														{{ field('domainsubdomain', item.domainsubdomain, trans("subdomain"))}}
													</div>
												</div>
												<div class="col-6">
													<div class="col-auto">
														{{ field('subdomaintld', item.subdomaintld, trans("subdomaintld"), {options: domains})}}
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
	{% if rendered is not null %}

		<div class="col-12 col-xl-6 col-md-12">
			{{ rendered}}
		</div>
	{% endif %}
</div>