<div class="col-md-12 col-sm-12 col-xl-6">
	<div class="card">
		<div class="card-body">
			<div class="row">
				<div class="col-12">
					<h4>{{ trans("Identifyyourself") }}</h4>
					<form action="{{ path('auth.login')}}" id="login-form" method="post">
						{{ csrf_input() }}

						<input class="form-control" name="redirect_route" id="redirect_route" hidden="" type="text" value="account">
						{{ field('email', null, trans("email"), {type: 'email'}) }}
						{{ field('password', null, trans("password"), {type: 'password'}) }}

						<div class="form-check">
						<input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
							<label class="form-check-label" for="remember">
								{{ trans("account.login.remember") }}
							</label>
						</div>
						<div class="d-flex justify-content-between">
							<div>
								<a href="{{ path('auth.password') }}" class="forgot-pass">{{ trans("account.forgot.title")}}</a><br>
							</div>
							<button type="submit" class="btn btn-primary mt-2">
								<i class="fas fa-sign-in-alt"></i>
								{{ trans("account.login.tologin") }}</button>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
